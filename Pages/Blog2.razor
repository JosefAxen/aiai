        /* === Subtila animationer för text === */
        h4 {
            position: relative;
        }

            h4::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -5px;
                width: 40px;
                height: 3px;
                background: linear-gradient(45deg, #4CAF50, #81C784);
                border-radius: 10px;
            }

        /* === Fade-in på text för bättre läsflow === */
        .fs-5 {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s ease-in-out;
        }

        [data-aos="fade-up"] .fs-5 {
            opacity: 1;
            transform: translateY(0);
        }

    </style>
